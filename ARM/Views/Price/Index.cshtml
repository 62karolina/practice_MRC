@model IEnumerable<ARM.Models.Servises>
@{
    ViewBag.Title = "Index";
 
}

@Html.ActionLink("Назад", "Index", "Renter", new { @class = "label label-primary" })

<h2>Цены на услуги</h2>


@Html.ActionLink("Изменить цены", "Price", "Price",new { @class = "label label-primary" })

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Название</th>
                <th>Цена</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                </tr>
            }
        </tbody>
    </table>

